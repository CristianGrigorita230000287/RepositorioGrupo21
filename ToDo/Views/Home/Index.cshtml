@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@inject UserManager<Utilizador> userManager;

@{
    var utilizador = await userManager.GetUserAsync(User);
    var primeiroNome = User?.Claims.FirstOrDefault(c => c.Type == "PrimeiroNome")?.Value;
    var apelido = User?.Claims.FirstOrDefault(c => c.Type == "Apelido")?.Value;
    var isAdmin = User.IsInRole("Admin");
    var isCliente = User.IsInRole("Cliente");
    var isConvidado = User.IsInRole("Convidado");
}

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>TO-DO LIST</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .hero {
            background: #f4f4f4;
            padding: 2rem 1rem;
            text-align: center;
        }

            .hero h1 {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .hero p {
                font-size: 1.2rem;
                margin-bottom: 1.5rem;
            }

            .hero button {
                padding: 0.7rem 1.5rem;
                font-size: 1rem;
                color: white;
                background: #4CAF50;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .hero button:hover {
                    background: #45a049;
                }

        .features {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.5rem;
            padding: 2rem;
        }

        .feature {
            background: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 1rem;
            width: 300px;
            text-align: center;
        }

            .feature h3 {
                color: #4CAF50;
            }
    </style>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/Home/Index"><b>TO-DO LIST</b></a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            @if (primeiroNome != null && apelido != null)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Perfil">
                        <i class="fas fa-user fa-fw"></i> Perfil
                    </a>
                </li>
            }
            <partial name="_LoginParcial" />
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Principal</div>

                        @if (isAdmin)
                        {
                            <a class="nav-link" href="/Admin/Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                                Dashboard
                            </a>
                            <a class="nav-link" href="/Admin/GerirUtilizadores">
                                <div class="sb-nav-link-icon"><i class="fas fa-users-cog"></i></div>
                                Gerir Utilizadores
                            </a>
                            <a asp-controller="Tarefas" asp-action="Index" class="nav-link ">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Tarefas
                            </a>
                            <a asp-controller="Categorias" asp-action="Index" class="nav-link ">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Categorias
                            </a>
                            <a asp-controller="Comentarios" asp-action="Index" class="nav-link ">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Comentarios
                            </a>
                        }
                        @if (isCliente)
                        {
                            <a class="nav-link" href="/Tarefas/Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tasks"></i></div>
                                Visualizar Tarefas
                            </a>
                            <a class="nav-link" href="/Tarefas/Create">
                                <div class="sb-nav-link-icon"><i class="fas fa-plus"></i></div>
                                Criar Tarefa
                            </a>
                        }


                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    @if (primeiroNome != null && apelido != null)
                    {
                        <div class="small">Logado como:</div>
                        @($"{primeiroNome} {apelido}")
                    }
                    else
                    {
                        <div class="small">Não está logado.</div>
                    }
                </div>
            </nav>
        </div>
        <div id="layoutSidenav">
            <div class="container-fluid px-4">
                <br />
                <br />
                <div class="card mb-4">
                    <div class="card-body">


                        @if (User.Identity.IsAuthenticated)
                        {
                            <h1 class="mt-4">Bem Vindo, @($"{primeiroNome} {apelido}")!</h1>
                            @if (isAdmin)
                            {
                                <div class="mt-4">
                                    <a class="btn btn-primary mb-2" href="/Admin/Dashboard"><i class="fas fa-chart-line"></i> Dashboard</a><br />
                                    <a class="btn btn-primary" href="/Admin/GerirUtilizadores"><i class="fas fa-users-cog"></i> Gerir Utilizadores</a>
                                </div>
                            }
                            @if (isCliente)
                            {
                                <div class="mt-4">
                                    <a class="btn btn-primary mb-2" href="/Tarefas/Index"><i class="fas fa-tasks"></i> Visualizar Tarefas</a><br />
                                    <a class="btn btn-primary" href="/Tarefas/Create"><i class="fas fa-plus"></i> Criar Tarefa</a>
                                </div>
                            }
                        }
                        else
                        {
                            <section class="hero">
                                <h1>Gerencie Suas Tarefas com Facilidade</h1>
                                <p>Crie, organize e acompanhe suas tarefas diárias de forma eficiente.</p>
                                <button>Comece Agora</button>
                            </section>
                            <section id="features" class="features">
                                <div class="feature">
                                    <h3>Organização Simplificada</h3>
                                    <p>Crie e categorize suas tarefas para manter tudo sob controle.</p>
                                </div>
                                <div class="feature">
                                    <h3>Progresso Visível</h3>
                                    <p>Acompanhe o andamento de suas tarefas com facilidade.</p>
                                </div>
                                <div class="feature">
                                    <h3>Área Administrativa</h3>
                                    <p>Controle usuários e visualize estatísticas detalhadas.</p>
                                </div>
                            </section>
                        }
                    </div>

                </div>

            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                crossorigin="anonymous"></script>
        <script src="~/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
                crossorigin="anonymous"></script>
        <script src="~/js/datatable.js"></script>
</body>

</html>
@model ToDo.Models.Tarefa

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid px-4">
    <ol class="breadcrumb mb-4">
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <h1>Eliminar</h1>
            <div class="alert alert-danger" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i> Tem a certeza que deseja eliminar está tarefa?
            </div>
            <div>
                <h4>Tarefa</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Prioridade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Prioridade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoria.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataCriacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataCriacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataLimite)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataLimite)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary"> Voltar</a>
    </div>
</div>
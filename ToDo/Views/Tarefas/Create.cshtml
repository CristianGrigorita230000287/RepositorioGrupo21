@model ToDo.Models.Tarefa

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Criar Tarefa</h1>
    <ol class="breadcrumb mb-4">
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UtilizadorId" class="control-label"></label>
                    <input asp-for="UtilizadorId" class="form-control" />
                    <span asp-validation-for="UtilizadorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prioridade" class="control-label"></label>
                    <input asp-for="Prioridade" class="form-control" />
                    <span asp-validation-for="Prioridade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label">Categoria</label>
                    @Html.DropDownListFor(model => model.CategoriaId, (SelectList)ViewBag.Categorias, new { @class = "form-control" })
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataCriacao" class="control-label"></label>
                    <input asp-for="DataCriacao" class="form-control" />
                    <span asp-validation-for="DataCriacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataLimite" class="control-label"></label>
                    <input asp-for="DataLimite" class="form-control" />
                    <span asp-validation-for="DataLimite" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
